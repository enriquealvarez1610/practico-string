#include <iostream>
#include <string>
using namespace std;
void leerCadena(string& cadena) {
    cout << "Ingrese una cadena de texto: ";
    getline(cin, cadena);
}
int contarVocalesJuntas(const string& cadena) {
    int contador = 0;
    int len = (int)cadena.length();
    for (int i = 0; i < len - 1; ++i) {
        char c1 = tolower(cadena[i]);
        char c2 = tolower(cadena[i + 1]);
        if ((c1 == 'a' || c1 == 'e' || c1 == 'i' || c1 == 'o' || c1 == 'u') &&
            (c2 == 'a' || c2 == 'e' || c2 == 'i' || c2 == 'o' || c2 == 'u')) {
            contador++;
        }
    }
    return contador;
}
void mostrarResultado(int contador) {
    cout << "Cantidad de veces que existen dos vocales juntas: " << contador << endl;
}
int main() {
    string cadena;
    leerCadena(cadena);
    int contador = contarVocalesJuntas(cadena);
    mostrarResultado(contador);
    return 0;
}
