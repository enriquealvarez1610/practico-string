#include <iostream>
#include <string>
using namespace std;

void leerCadena(string &cadena) {
    cout << "Ingrese una cadena: ";
    getline(cin, cadena);
}

void codificarCadena(string &cadena, int c) {
    for (int i = 0; i < cadena.length(); i++) {
        char ch = cadena[i];

        if (ch >= 'a' && ch <= 'z') {
            ch = ((ch - 'a' + c) % 26) + 'a';
        }
        else if (ch >= 'A' && ch <= 'Z') {
            ch = ((ch - 'A' + c) % 26) + 'A';
        }

        cadena[i] = ch;
    }
}

void mostrarCadena(const string &cadena) {
    cout << "Cadena codificada: " << cadena << endl;
}

int main() {
    string texto;
    int c;

    leerCadena(texto);

    cout << "Ingrese el valor de desplazamiento: ";
    cin >> c;
    cin.ignore();

    codificarCadena(texto, c);
    mostrarCadena(texto);

    return 0;
}
