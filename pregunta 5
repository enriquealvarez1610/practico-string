#include <iostream>
#include <string>
using namespace std;
string mezclarCadenas(const string& str1, const string& str2) {
    string resultado;
    size_t len1 = str1.length();
    size_t len2 = str2.length();
    size_t maxLen = max(len1, len2);

    for (size_t i = 0; i < maxLen; ++i) {
        if (i < len1) {
            resultado += str1[i];
        }
        if (i < len2) {
            resultado += str2[i];
        }
    }

    return resultado;
}
int main() {
    string cadena1, cadena2;
    cout << "Ingrese la primera cadena de texto: ";
    getline(cin, cadena1);
    cout << "Ingrese la segunda cadena de texto: ";
    getline(cin, cadena2);

    string cadenaMezclada = mezclarCadenas(cadena1, cadena2);
    cout << "Cadena mezclada: " << cadenaMezclada << endl;

    return 0;
}
